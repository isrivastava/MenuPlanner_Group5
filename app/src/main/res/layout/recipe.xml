<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/recipe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="RECIPE"
                android:textColor="#fff"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Select Recipe"
                    android:textColor="#2F4F4F"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="No. of Serving"
                    android:textColor="#2F4F4F"
                    android:textSize="24sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:weightSum="1">

                <AutoCompleteTextView
                    android:id="@+id/recAutoComp"
                    android:layout_width="200dp"
                    android:layout_height="50dp" />

                <EditText
                    android:id="@+id/no_of_serv"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/showIng_btn"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/Show"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/updateRec_btn"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/Update"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/deleteRec_btn"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/Delete"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Ing_recipe"
                    android:textColor="#2F4F4F"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INGREDIENT"
                    android:textColor="#2F4F4F"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="QTY"
                    android:textColor="#2F4F4F"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView7"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="UNITS"
                    android:textColor="#2F4F4F"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="1">

                <ScrollView
                    android:id="@+id/rec_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:textColor="#2F4F4F" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="Selet Ingredient"
                        android:textColor="#2F4F4F"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:text="QTY"
                        android:textColor="#2F4F4F"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:text="UNITS"
                        android:textColor="#2F4F4F"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:weightSum="1">

                    <AutoCompleteTextView
                        android:id="@+id/ingAutoComp"
                        android:layout_width="200dp"
                        android:layout_height="50dp" />


                    <EditText
                        android:id="@+id/ingQty"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp" />

                    <Spinner
                        android:id="@+id/unitId_spinner"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:weightSum="1">


                    <Button
                        android:id="@+id/updateIng_btn"
                        android:layout_width="170dp"
                        android:layout_height="36dp"
                        android:text="@string/Update_Ing"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/addIng_btn"
                        android:layout_width="200dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/Add_Ing"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/delIng_btn"
                        android:layout_width="200dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/Del_Ing"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/homePage_btn"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/Home_Page"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/eventPage_btn"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/Event_Page"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/listPage_btn"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/List_Page"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>